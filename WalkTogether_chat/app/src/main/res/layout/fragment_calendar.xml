<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".CalendarFragment">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent" android:orientation="vertical"
                  android:background="@color/colorWhite">
        <TextView android:id="@+id/tv_date" android:layout_width="match_parent" android:layout_height="50dp"
                  android:background="#50000000"
                  android:textColor="@color/colorWhite" android:gravity="center_vertical" android:paddingLeft="10dp"
                  android:textSize="20sp"/>
        <GridView android:layout_marginTop="10dp" android:id="@+id/gridview" android:layout_weight="1"
                  android:layout_height="0dp" android:layout_width="match_parent" android:numColumns="7"
                  android:listSelector="@color/transparent"></GridView>
    </LinearLayout>

</FrameLayout>